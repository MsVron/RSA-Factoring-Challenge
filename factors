#!/usr/bin/env python3
import sys

def factorize(n):
    # Start by checking if the number is even
    if n % 2 == 0:
        return 2, n // 2

    # If not, check odd numbers up to the square root of n
    i = 3
    while i * i <= n:
        if n % i:
            i += 2
        else:
            return i, n // i

    # If no factor found, the number is prime
    return n, 1

def main():
    # Check that a file name was provided as command line argument
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        return

    # Open the file and read numbers line by line
    with open(sys.argv[1], 'r') as file:
        for line in file:
            # Remove newline and convert to integer
            n = int(line.strip())

            # Factorize the number
            p, q = factorize(n)

            # Print the factorization
            print(f"{n}={p}*{q}")

if __name__ == "__main__":
    main()
